{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve:python-8000",
      "type": "shell",
      "command": "python -m http.server 8000",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": [{ "regexp": ".*" }],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Serving HTTP on"
        }
      }
    }
  ]
}
